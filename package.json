{
  "name": "electron-vue",
  "version": "1.0.0",
  "description": "electron vue 框架",
  "main": ".webpack/main",
  "scripts": {
    "lint": "eslint --fix --ext .js,.vue ./src/",
    "dev": "cross-env BUILD_ENV=dev electron-forge start",
    "package": "cross-env BUILD_ENV=build electron-forge package",
    "build": "cross-env BUILD_ENV=build electron-forge make"
  },
  "author": "ethan",
  "license": "ISC",
  "dependencies": {
    "core-js": "3",
    "electron-squirrel-startup": "^1.0.0",
    "path": "^0.12.7",
    "vue": "3.2.2",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-regenerator": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.59",
    "@vercel/webpack-asset-relocator-loader": "^1.6.0",
    "@vue/compiler-sfc": "^3.2.1",
    "babel-eslint": "10.0.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "electron": "^13.1.9",
    "eslint": "7.26.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-import-resolver-webpack": "0.11.1",
    "eslint-loader": "4.0.2",
    "eslint-plugin-html": "6.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-vue": "7.9.0",
    "node-sass": "^6.0.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "vue-loader": "^16.5.0",
    "vue-template-compiler": "^2.6.14"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "lemenu"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/layout/default/index.html",
                  "js": "./src/layout/default/index.js",
                  "preload": {
                    "js": "./src/layout/default/preload.js"
                  },
                  "name": "default_window"
                }
              ]
            }
          }
        ]
      ]
    }
  }
}
